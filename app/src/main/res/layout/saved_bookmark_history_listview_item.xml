<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="fill_parent"
    android:layout_height="40dip"
    android:background="@drawable/bookmark_list_selector"
    android:gravity="center_vertical">

    <ImageView
        android:layout_width="10dip"
        android:layout_height="match_parent"
        android:id="@+id/bookmarkHistoryColor"
        android:background="#ffd8e5b8"
        android:baselineAlignBottom="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bookmarkHistoryName"
        android:text="Bookmark Name"
        android:paddingLeft="15dip"
        android:textSize="20dip" />


    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:id="@+id/bookmarkStartTime"
        android:paddingRight="5dip" />

</LinearLayout>